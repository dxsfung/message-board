<!-- Handles update to Questsions; called by [question] -->

{{#if updateQuestionForm}}
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=question.author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="content">Question</label>
        {{input value=question.content id="content" placeholder=question.content}}
      </div>

      <div class="form-group">
        <label for="notes">Notes</label>
        {{input value=question.notes id="notes" placeholder=question.notes}}
      </div>

      <button {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Edit Question</button>
{{/if}}
